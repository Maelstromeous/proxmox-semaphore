table inet host_isolation {
  set ssh_allowed_v4 {
    type ipv4_addr
    flags interval
    elements = {
      {% for ip in allowed_ssh_v4 %}
      {{ ip }}{% if not loop.last %}, {% endif %}
      {% endfor %}
    }
  }

  chain input {
    type filter hook input priority 0;
    policy drop;

    # Allow loopback
    iif "lo" accept;

    # Allow existing sessions
    ct state established,related accept;

    {% if allow_dhcp_client %}
    # Allow DHCP client
    udp sport 67 udp dport 68 accept;
    {% endif %}

    # ✅ Allow SSH only from allowed sources
    tcp dport 22 ip saddr @ssh_allowed_v4 accept;

    # ❌ Drop *all other* traffic from 10.0.5.0/24
    ip saddr {{ block_cidr_v4 }} drop;

    # Everything else inbound is dropped by policy
  }

  chain forward {
    type filter hook forward priority 0;
    policy accept;
  }

  chain output {
    type filter hook output priority 0;
    policy accept; # outbound open (DNS → 1.1.1.1 works)
  }
}